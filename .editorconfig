# Drupal editor configuration normalization
# @see http://editorconfig.org/

root = true

[*]
charset=utf-8
end_of_line=lf
indent_style=space
indent_size=4
trim_trailing_whitespace = true
insert_final_newline = true

# php files
[*.php]
indent_style = space
indent_size = 4


[composer.{json,lock}]
indent_style=space
indent_size = 4

[{.eslintrc,.prettierrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=4

[{*.scss,*.sass,*.css}]
indent_style=space
indent_size=2

[*.js]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

